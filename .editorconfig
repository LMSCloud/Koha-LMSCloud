# top-most EditorConfig file (http://editorconfig.org)
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# 4 space indentation
indent_style = space
indent_size = 4
# New files charset should be UTF-8
charset = utf-8

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2
quote_type = single
