            { 'sType': "anti-the", 'aTargets' : [ 'anti-the'] }
        ]
    } ) );

    var csrlt = $("#csrlt").dataTable($.extend(true, {}, dataTablesDefaults, {
        // FIXME sort function of additional_fields!
        "sPaginationType": "four_button",
        "aoColumnDefs": [
            { 'bSortable': false, 'aTargets': [ 'NoSort' ] },
            { 'sType': "anti-the", 'aTargets' : [ 'anti-the'] }
