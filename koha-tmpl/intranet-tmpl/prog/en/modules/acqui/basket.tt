                        [% END %]
                    </tr>
                [% END %]
                <tr>
                    <th></th>
                    <th>Total ([% currency %])</th>
                    <th class="gste">&nbsp;</th>
                    <th class="gste">&nbsp;</th>
                    <th class="gsti">&nbsp;</th>
                    <th class="gsti">&nbsp;</th>
